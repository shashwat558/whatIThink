generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
  role     Role   @default(Admin)
}

model Blog {
  id            Int      @id @default(autoincrement())
  title         String
  description   String
  publishedDate DateTime @default(now())
  readingTime   Int
  updatedAt     DateTime @updatedAt
}

enum Role {
  User
  Admin
}
